<%= render 'top/navbar' %>

<div class="user_page">
  <h2>プロフィールを編集する</h2>
  <%= form_for(@user) do |f| %>
  
    <div class="field">
    <%= f.label "ニックネーム" %> <em>(最大10文字)</em><br />
    <%= f.text_field :nickname, autofocus: true, maxlength: "10" %>
  </div>
  
  <div class="field">
    <%= f.label "プロフィール画像" %>
    <%= f.file_field :image, class: "form-control", placeholder: "画像をアップロード" %>
  </div>
  
  <div class="field">
    <%= f.label "テニス風景(動画)" %>
    <%= f.file_field :video, class: "form-control", placeholder: "動画をアップロード" %>
  </div>
  
  <div class="text_field">
    <%= f.label "自己紹介" %><br />
    <%= f.text_area :introduction, autofocus: true, rows: "10", cols: "30" %>
  </div>
  
    <%= f.submit "編集する" %>
  <% end %>
  <%= button_to "トップに戻る", "/top", id: "topbutton" %>
</div>