<div class="registration">
  <div class="formtitle">
    <p>Tennismate</p>
    <p>～みんなでテニスしよう！～</p>
  </div>
  <div class="formtitle_subtitle">
    <p class="login_title">新規会員登録</p>
  </div>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field">
      <%= f.label "ニックネーム" %> <em>(※最大10文字)</em><br />
      <%= f.text_field :nickname, autofocus: true, maxlength: "10" %>
    </div>
    
    <div class="field">
      <%= f.label "自己紹介（過去の大会成績、テニス歴、その他）" %><br />
      <%= f.text_area :introduction, autofocus: true, rows: "10", cols: "30" %>
    </div>
    
    <div class="field file_choice">
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control", placeholder: "画像をアップロード" %>
    </div>
    
    <div class="field file_choice">
      <%= f.label :video %>
      <%= f.file_field :video, class: "form-control", placeholder: "テニス風景をアップロード" %>
    </div>
    
  
    <div class="field">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label "パスワード（再確認）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  
    <div class="actions">
      <%= f.submit "会員登録" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>

</div>